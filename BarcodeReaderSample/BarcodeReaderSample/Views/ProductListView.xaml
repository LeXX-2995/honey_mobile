<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarcodeReaderSample.Views.ProductListView">
    <Grid VerticalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <!--<RowDefinition Height="50"/>-->
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <ListView Grid.Row="0"
                  ItemsSource="{Binding Products}"
                  SelectedItem="{Binding SelectedItem}"
                  CachingStrategy="RecycleElement">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding ItemToDisplayUpper}" />
                            <Label Text="{Binding ItemToDisplayBelow}" />
                        </StackLayout>
                    </ViewCell>

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Завершить" Command="{Binding CompleteCommand}" Grid.Row="1" FontSize="20" Margin="20"/>
    </Grid>
</ContentPage>