<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarcodeReaderSample.Views.DisaggregationView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Text="Сканируйте SSCC код для разагрегации" FontSize="20" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
        <Editor Grid.Row="1" Text="{Binding Code, Mode=TwoWay}" Placeholder="Введите SSCC код или отсканируйте" HeightRequest="30"/>
        <Button Grid.Row="2" Text="Разагрегировать" Command="{Binding DisAggregateCommand}"/>
    </Grid>
</ContentPage>