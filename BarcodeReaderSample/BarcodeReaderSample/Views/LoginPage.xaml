<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarcodeReaderSample.Views.LoginPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Entry Grid.Row="0" Placeholder="Логин" Text="{Binding Login, Mode=TwoWay}"/>
            <Entry Grid.Row="1" Placeholder="Пароль" 
                   Text="{Binding Password, Mode=TwoWay}"
                   IsPassword="True" />
            <Entry Grid.Row="2" Placeholder="Порт" Text="{Binding Port, Mode=TwoWay}"/>

            <Button Grid.Row="3" Text="Войти"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    WidthRequest="250"
                    FontSize="20"
                    Command="{Binding LoginCommand}"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>